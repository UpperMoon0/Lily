<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox fx:id="vbox" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.nhat.lily.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true">
        <clip>
            <Circle fx:id="imageClip" centerX="50" centerY="50" radius="50" />
        </clip>
        <Image url="@image/lily.png"/>
    </ImageView>

    <TextArea fx:id="botResponses" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" prefHeight="200" prefWidth="300" wrapText="true" editable="false"
              style="-fx-control-inner-background: #282828; -fx-text-fill: white;" />
    <HBox>
        <Label text="Enter prompt:"/>
    </HBox>
    <TextField fx:id="userInput" VBox.vgrow="ALWAYS" maxWidth="Infinity" onAction="#onUserInputAction"
               style="-fx-background-color: #282828; -fx-text-fill: white;" />
</VBox>