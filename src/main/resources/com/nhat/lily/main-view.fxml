<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.nhat.lily.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="botResponses" VBox.vgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" prefHeight="200" prefWidth="300" wrapText="true" editable="false"
              style="-fx-control-inner-background: #282828; -fx-text-fill: white;" />
    <HBox>
        <Label text="Enter prompt:"/>
    </HBox>
    <TextField fx:id="userInput" VBox.vgrow="ALWAYS" maxWidth="Infinity" onAction="#onUserInputAction"
               style="-fx-background-color: #282828; -fx-text-fill: white;" />
</VBox>